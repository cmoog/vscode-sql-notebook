{
  "name": "sqlnotebook",
  "displayName": "SQL Notebook",
  "publisher": "cmoog",
  "description": "View SQL files as notebooks. Execute cells and view query output.",
  "icon": "media/logo128.png",
  "repository": {
    "url": "https://github.com/cmoog/vscode-sql-notebook"
  },
  "version": "0.2.0",
  "preview": false,
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Data Science",
    "Notebooks",
    "Visualization"
  ],
  "activationEvents": [
    "onNotebook:sql-notebook",
    "onView:sqlnotebook-connections"
  ],
  "main": "./out/extension/extension.js",
  "targets": {
    "main": false
  },
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "notebooks": [
      {
        "type": "sql-notebook",
        "displayName": "SQL Notebook",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.sql"
          }
        ]
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "sqlnotebook.connect",
          "when": "view == sqlnotebook-connections &&  viewItem == database",
          "group": "inline"
        },
        {
          "command": "sqlnotebook.connect",
          "when": "view == sqlnotebook-connections &&  viewItem == database"
        },
        {
          "command": "sqlnotebook.deleteConnectionConfiguration",
          "when": "view == sqlnotebook-connections &&  viewItem == database"
        }
      ],
      "view/title": []
    },
    "commands": [
      {
        "command": "sqlnotebook.connect",
        "title": "Connect to Database",
        "icon": {
          "dark": "media/dark/dbconnection.svg",
          "light": "media/light/dbconnection.svg"
        }
      },
      {
        "command": "sqlnotebook.deleteConnectionConfiguration",
        "title": "Delete SQL Connection Configuration"
      },
      {
        "command": "sqlnotebook.refreshConnectionPanel",
        "title": "Refresh SQL Connection Panel",
        "shortTitle": "Refresh"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sqlnotebook",
          "title": "SQL Notebook",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "sqlnotebook": [
        {
          "id": "sqlnotebook-connections",
          "name": "SQL Connections",
          "visibility": "visible",
          "icon": "media/logo.svg",
          "contextualTitle": "Connections"
        },
        {
          "type": "webview",
          "id": "sqlnotebook.connectionForm",
          "name": "New SQL Connection",
          "contextualTitle": "New Connection",
          "visibility": "visible"
        },
        {
          "id": "sqlnotebook-helpfeedback",
          "name": "Help and Feedback",
          "visibility": "collapsed",
          "icon": "media/logo.svg",
          "contextualTitle": "Help and Feedback"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b ./src & webpack --config ./webview/webpack.config.js",
    "lint": "eslint src --ext ts",
    "watch": "tsc -b ./src --watch & webpack --watch --config ./webview/webpack.config.js",
    "fmt": "npx prettier --write ./*.{jsx,ts,tsx,json,yaml,yml,md}"
  },
  "devDependencies": {
    "@types/escape-html": "^1.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/mssql": "^7.1.3",
    "@types/node": "14.x",
    "@types/pg": "^8.6.1",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "@types/vscode": "^1.59.0",
    "@types/vscode-notebook-renderer": "^1.57.8",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.0",
    "eslint": "^7.27.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.3.2",
    "vscode-notebook-error-overlay": "^1.0.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^0.8.4",
    "mssql": "^7.2.1",
    "mysql2": "^2.3.0",
    "pg": "^8.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true
  }
}
