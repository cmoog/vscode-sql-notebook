{
  "name": "sqlnotebook",
  "displayName": "SQL Notebook",
  "publisher": "cmoog",
  "description": "View SQL files as notebooks. Execute cells and view query output.",
  "icon": "media/logo128.png",
  "repository": {
    "url": "https://github.com/cmoog/vscode-sql-notebook"
  },
  "version": "0.1.0",
  "preview": false,
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Data Science",
    "Notebooks",
    "Visualization"
  ],
  "activationEvents": [
    "onNotebook:sql-notebook",
    "onView:sqlnotebook-connections"
  ],
  "main": "./out/extension/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "extensionKind": [
    "workspace"
  ],
  "contributes": {
    "notebooks": [
      {
        "type": "sql-notebook",
        "displayName": "SQL Notebook",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.sql"
          }
        ]
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "sqlnotebook.connect",
          "when": "view == sqlnotebook-connections &&  viewItem == database",
          "group": "inline"
        },
        {
          "command": "sqlnotebook.connect",
          "when": "view == sqlnotebook-connections &&  viewItem == database"
        },
        {
          "command": "sqlnotebook.deleteConnectionConfiguration",
          "when": "view == sqlnotebook-connections &&  viewItem == database"
        }
      ],
      "view/title": [
        {
          "command": "sqlnotebook.addNewConnectionConfiguration",
          "when": "view == sqlnotebook-connections",
          "group": "navigation"
        }
      ]
    },
    "commands": [
      {
        "command": "sqlnotebook.connect",
        "title": "Connect to Database",
        "icon": {
          "dark": "media/dark/dbconnection.svg",
          "light": "media/light/dbconnection.svg"
        }
      },
      {
        "command": "sqlnotebook.addNewConnectionConfiguration",
        "title": "Create New Connection Configuration",
        "icon": {
          "light": "media/light/plus.svg",
          "dark": "media/dark/plus.svg"
        }
      },
      {
        "command": "sqlnotebook.deleteConnectionConfiguration",
        "title": "Delete Connection Configuration"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sqlnotebook",
          "title": "SQL Notebook",
          "icon": "media/logo.svg"
        }
      ]
    },
    "views": {
      "sqlnotebook": [
        {
          "id": "sqlnotebook-connections",
          "name": "SQL Connections",
          "visibility": "visible",
          "icon": "media/logo.svg",
          "contextualTitle": "Connections"
        },
        {
          "id": "sqlnotebook-helpfeedback",
          "name": "Help and Feedback",
          "visibility": "collapsed",
          "icon": "media/logo.svg",
          "contextualTitle": "Help and Feedback"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:client",
    "compile:extension": "tsc -b",
    "compile:client": "webpack --mode production",
    "lint": "eslint src --ext ts",
    "watch": "concurrently -r \"npm:watch:*\"",
    "watch:extension": "tsc -b --watch",
    "watch:client": "webpack --mode development --watch",
    "dev": "concurrently -r npm:watch:extension npm:watch:client",
    "fmt": "npx prettier -w ./*.{jsx,ts,tsx,json,yaml,yml,md}"
  },
  "devDependencies": {
    "@types/escape-html": "^1.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/mssql": "^7.1.3",
    "@types/node": "14.x",
    "@types/pg": "^8.6.1",
    "@types/vscode": "^1.59.0",
    "@types/vscode-notebook-renderer": "^1.57.8",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.0",
    "eslint": "^7.27.0",
    "fork-ts-checker-webpack-plugin": "^5.0.14",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "style-loader": "^1.2.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "vscode-notebook-error-overlay": "^1.0.1",
    "vscode-test": "^1.5.2",
    "webpack": "^5.38.1",
    "webpack-cli": "^4.7.0"
  },
  "dependencies": {
    "core-util-is": "^1.0.2",
    "isarray": "^2.0.5",
    "mssql": "^7.2.1",
    "mysql2": "^2.3.0",
    "pg": "^8.7.1",
    "process-nextick-args": "^2.0.1"
  }
}
